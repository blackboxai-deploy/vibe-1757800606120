# API Keys للخدمات المختلفة
HIBP_API_KEY=your_haveibeenpwned_api_key_here
HUNTER_API_KEY=your_hunter_io_api_key_here  
LEAKCHECK_API_KEY=your_leakcheck_api_key_here
CLEARBIT_API_KEY=your_clearbit_api_key_here

# إعدادات Flask
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here
FLASK_HOST=0.0.0.0
FLASK_PORT=3000

# إعدادات قاعدة البيانات (اختيارية)
DATABASE_URL=sqlite:///osint_toolkit.db

# إعدادات Redis للـ Cache (اختيارية)
REDIS_URL=redis://localhost:6379/0

# إعدادات Rate Limiting
RATELIMIT_PER_MINUTE=30
RATELIMIT_PER_HOUR=500

# إعدادات الأمان
ENABLE_CORS=True
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# إعدادات التقارير
REPORTS_DIRECTORY=./reports
MAX_REPORT_SIZE_MB=50

# إعدادات اللغة
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en